<%- include ('partials/header.ejs') %>

  <body>
    <%- include ('partials/navbar.ejs') %>

      <div class="container mt-2 p-2 bg-light pt-2">
        <hr>
        <h1>
          <%= pergunta.titulo %>
        </h1>
        <p>
          <%= pergunta.descricao %>
        </p>
        <hr>


        <form method="post" action="/responder">
          <h3>Responda</h3>
          <textarea placeholder="Digite sua resposta" class=" form-control" name="corpo"></textarea>
          <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
          <button class="btn btn-success mt-3">Responder</button>
        </form>

        <hr>
        <h3>Respostas</h3>
        <hr>
        <%respostas.forEach(resposta=> {%>
          <div class="card">
            <div class="card-body">
              <h5>
                <%=resposta.corpo%>
              </h5>
            </div>
          </div>
          <hr>
          <%})%>
      </div>
  </body>
  <%- include ('partials/footer.ejs') %>